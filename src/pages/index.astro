	<div class="mx-auto min-h-screen max-w-screen-xl">
		<div id="hero" class="w-full h-fit gap-8">
			<div id="contact_about" class="w-full h-full py-11 px-8 gap-8 flex flex-row">
				<div id="contact" class="flex flex-col w-[40%] h-fit">
					<div id="name" class="flex flex-col">
						<h1>Pedro Pinho</h1>
						<p class="medium">bryer.pinho@outlook.com</p>
					</div>
					<ul id="media" class="h-fit w-fit gap-4 py-6 flex flex-row">
						<li id="github" class="h-8 w-8 scaleImg">
							<a href="https://www.github.com/pdPinho">
