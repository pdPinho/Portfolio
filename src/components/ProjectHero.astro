---
const { title, projectLink, githubLink, languages, tools, softSkills, about, challenges, noURL, noChallenges } = Astro.props;
import Image from "astro/components/Image.astro";

---
<div id="contact_about" class="w-full h-fit gap-8">
    <div class="w-full h-full py-11 px-8 gap-8 flex flex-row">
        <div id="contact" class="flex flex-col w-full h-fit">
            <div id="name" class="flex flex-col gap-8 sm:pl-0 pl-8 sm:items-center">
                <h1>{title}</h1>
                <ul id="media" class="h-fit w-fit gap-4 flex flex-row">
                    <li id="github" class="h-8 w-8 scaleImg">
                        <a href={githubLink}>
                            <svg viewBox="0 0 1024 1024" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" clip-rule="evenodd" d="M8 0C3.58 0 0 3.58 0 8C0 11.54 2.29 14.53 5.47 15.59C5.87 15.66 6.02 15.42 6.02 15.21C6.02 15.02 6.01 14.39 6.01 13.72C4 14.09 3.48 13.23 3.32 12.78C3.23 12.55 2.84 11.84 2.5 11.65C2.22 11.5 1.82 11.13 2.49 11.12C3.12 11.11 3.57 11.7 3.72 11.94C4.44 13.15 5.59 12.81 6.05 12.6C6.12 12.08 6.33 11.73 6.56 11.53C4.78 11.33 2.92 10.64 2.92 7.58C2.92 6.71 3.23 5.99 3.74 5.43C3.66 5.23 3.38 4.41 3.82 3.31C3.82 3.31 4.49 3.1 6.02 4.13C6.66 3.95 7.34 3.86 8.02 3.86C8.7 3.86 9.38 3.95 10.02 4.13C11.55 3.09 12.22 3.31 12.22 3.31C12.66 4.41 12.38 5.23 12.3 5.43C12.81 5.99 13.12 6.7 13.12 7.58C13.12 10.65 11.25 11.33 9.47 11.53C9.76 11.78 10.01 12.26 10.01 13.01C10.01 14.08 10 14.94 10 15.21C10 15.42 10.15 15.67 10.55 15.59C13.71 14.53 16 11.53 16 8C16 3.58 12.42 0 8 0Z" transform="scale(64)" fill="#8398ED"/>
                            </svg>
                        </a>
                    </li>
                    {noURL ? ""
                    :
                    <li class="h-8 w-8 scaleImg">
                        <a href={projectLink}>
                            <?xml version="1.0" encoding="UTF-8" standalone="no"?>
                            <svg xmlns:dc="http://purl.org/dc/elements/1.1/" xmlns:cc="http://creativecommons.org/ns#" xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#" xmlns:svg="http://www.w3.org/2000/svg" xmlns="http://www.w3.org/2000/svg" xmlns:sodipodi="http://sodipodi.sourceforge.net/DTD/sodipodi-0.dtd" xmlns:inkscape="http://www.inkscape.org/namespaces/inkscape" viewBox="0 -256 1850 1850" id="svg3025" version="1.1" inkscape:version="0.48.3.1 r9886" width="100%" height="100%" sodipodi:docname="external_link_font_awesome.svg">
                              <g transform="matrix(1,0,0,-1,30.372881,1426.9492)" id="g3027">
                                <path d="M 1408,608 V 288 Q 1408,169 1323.5,84.5 1239,0 1120,0 H 288 Q 169,0 84.5,84.5 0,169 0,288 v 832 Q 0,1239 84.5,1323.5 169,1408 288,1408 h 704 q 14,0 23,-9 9,-9 9,-23 v -64 q 0,-14 -9,-23 -9,-9 -23,-9 H 288 q -66,0 -113,-47 -47,-47 -47,-113 V 288 q 0,-66 47,-113 47,-47 113,-47 h 832 q 66,0 113,47 47,47 47,113 v 320 q 0,14 9,23 9,9 23,9 h 64 q 14,0 23,-9 9,-9 9,-23 z m 384,864 V 960 q 0,-26 -19,-45 -19,-19 -45,-19 -26,0 -45,19 L 1507,1091 855,439 q -10,-10 -23,-10 -13,0 -23,10 L 695,553 q -10,10 -10,23 0,13 10,23 l 652,652 -176,176 q -19,19 -19,45 0,26 19,45 19,19 45,19 h 512 q 26,0 45,-19 19,-19 19,-45 z" id="path3029" inkscape:connector-curvature="0" style="fill:currentColor"/>
                              </g>
                            </svg>
                        </a>
                    </li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div id="techstack_about" class="flex flex-row w-full h-full pt-11 pb-48 px-8 gap-8">
        <div id="techstack_softskills" class="flex flex-col w-[50%] gap-11 px-6">
            <div class="flex flex-col gap-5 h-fit w-fit techStackSmallScreen">
                <h2 class="w-full">Tech Stack</h2>
                <div id="techstack" class="flex flex-col gap-5 px-3">
                    <div>
                        <h5>Languages</h5>
                        <ul class="gap-6 grid grid-cols-3 pt-4">
                            {languages.map((language, index) =>
                                <li class={"flex h-8 w-8 scaleImg speech-bubble z-" + (index >= 6 ? "0" : index >= 3 ? "10" : "20")} data-after-content={language.text}>
                                    <Image src={language.img} class="object-contain" alt={language.alt}/>
                                </li>
                            )}
                        </ul>
                    </div>
                    <div>
                        <h5>Tools</h5>
                        <ul class="gap-6 grid grid-cols-3 pt-4">
                            {tools.map((tool, index) =>
                                <li class={"flex h-8 w-8 scaleImg speech-bubble z-" + (index >= 6 ? "0" : index >= 3 ? "10" : "20")} data-after-content={tool.text}>
                                    <Image src={tool.img} class="object-contain" alt={tool.alt}/>
                                </li>
                            )}
                        </ul>
                    </div>
                </div>
            </div>
            <div class="flex flex-col gap-4 h-fit w-full">
                <h3 class="w-full">Soft skills</h3>
                <ul id="softskills" class="flex flex-wrap px-3 gap-2.5 w-[75%]">
                    {softSkills.map((skill) =>
                        <li class="flex rounded-xl w-fit h-fit text-[#1F0F1F] bg-[#A8B0C6] py-1 px-1.5 font-medium">{skill}</li>
                    )}
                </ul>
            </div>
        </div>
        <div id="about_challenges" class="flex flex-col w-[50%] h-fit gap-8 px-6 min-h-140">
            <div id="about" class="flex flex-col gap-4">
                <h2>About</h2>
                <div>
                    {about.map((paragraph) =>
                        <p class="mb-4">{paragraph}</p>
                    )}
                </div>
            </div>
            {noChallenges ? ""
            :
            <div id="challenges" class="flex flex-col gap-4">
                <h3>Challenges</h3>
                <div>
                    {challenges.map((challenge) =>
                        <p class="mb-4">{challenge}</p>
                    )}
                </div>
            </div>
            }
        </div>
    </div>
</div>